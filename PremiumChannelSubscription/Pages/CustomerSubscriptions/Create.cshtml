@page
@model PremiumChannelSubscription.CustomerSubscriptions.CreateModel

@{
    ViewData["Title"] = "Customer Subscriptions";
}

<h1>Customer Subscriptions</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CustomerSubscription.ServiceID" class="control-label"></label>
                <select asp-for="CustomerSubscription.ServiceID" class ="form-control" asp-items="ViewBag.ServiceID"></select>
            </div>
            <div class="form-group">
                <label asp-for="CustomerSubscription.CustomerID" class="control-label"></label>
                <select asp-for="CustomerSubscription.CustomerID" class ="form-control" asp-items="ViewBag.CustomerID"></select>
            </div>
            <div class="form-group">
                <label asp-for="CustomerSubscription.Amount" class="control-label"></label>
                <input asp-for="CustomerSubscription.Amount" class="form-control" />
                <span asp-validation-for="CustomerSubscription.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">**View Customer Subscription</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
