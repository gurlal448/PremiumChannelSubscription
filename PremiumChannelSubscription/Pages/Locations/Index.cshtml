@page
@model PremiumChannelSubscription.Locations.IndexModel

@{
    ViewData["Title"] = "View All Locations";
}

<h1>View All Locations</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Location[0].LocationName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location[0].CustomerCare)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Location) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LocationName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerCare)
            </td>
            <td>
                <a asp-page="./Edit" class="btn btn-primary" asp-route-id="@item.LocationID">Edit</a> |
                <a asp-page="./Details" class="btn btn-primary" asp-route-id="@item.LocationID">Details</a> |
                <a asp-page="./Delete" class="btn btn-primary" asp-route-id="@item.LocationID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
